<?xml version = '1.0' encoding = 'UTF-8' ?>
<PropertyList>

<!--F-100D course director indicator-->

<path>Models/cdi.ac</path>
<texture-path>Textures</texture-path>

<!--LIGHTING-->

<animation>
	<type>material</type>
	<object-name>indicator</object-name>
	<emission>
		<red>0.75</red>
		<green>0.25</green>
		<blue>0.25</blue>
		<factor-prop>/controls/lighting/panel-norm</factor-prop>
	</emission> 
</animation> 

<!--METAL EFFECTS-->

<animation>
	<type>shader</type>
	<shader>chrome</shader>
	<texture>metal-shader.png</texture>
		<object-name>base</object-name>
		<object-name>screws</object-name>
</animation>

<!--ROTATIONS-->

<animation>
	<type>rotate</type>
	<object-name>GSNeedle</object-name>
	<property>/instrumentation/nav[0]/gs-needle-deflection</property>
	<min>-10.0</min>
	<max>10.0</max>
	<interpolation>
		<entry><ind>-10.0</ind><dep>35</dep></entry>
		<entry><ind>0.0</ind><dep>0</dep></entry>
		<entry><ind>10.0</ind><dep>-35</dep></entry>
	</interpolation>
	<center>
		<x-m>0.0</x-m>
		<y-m>-0.03165</y-m>
		<z-m>-0.0071</z-m>
	</center>
	<axis>
		<x>-1.0</x>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>LOCNeedle</object-name>
	<property>/instrumentation/nav[0]/heading-needle-deflection</property>
	<min>-10.0</min>
	<max>10.0</max>
	<interpolation>
		<entry><ind>-10.0</ind><dep>35</dep></entry>
		<entry><ind>0.0</ind><dep>0</dep></entry>
		<entry><ind>10.0</ind><dep>-35</dep></entry>
		</interpolation>
	<center>
		<x-m>0.0</x-m>
		<y-m>0.0</y-m>
		<z-m>0.02445</z-m>
	</center>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<!--OFF FLAGS-->

<animation>
	<type>select</type>
	<object-name>GSFlag</object-name>
	<condition>
		<and>
			<or>
				<not>
					<property>/instrumentation/nav[0]/in-range</property>
				</not>
				<not>
					<property>/instrumentation/nav[0]/gs-in-range</property>
				</not>
			</or>
		</and>
	</condition>
</animation>

<animation>
	<type>select</type>
	<object-name>LOCFlag</object-name>
	<condition>
		<not>
			<property>/instrumentation/nav[0]/in-range</property>
		</not>
	</condition>
</animation>

<!--POINTER-->

<animation>
	<type>rotate</type>
	<object-name>pointer</object-name>
	<property>/instrumentation/cdi/pointer</property>
   	<factor>1</factor>
	<center>
		<z-m>-0.00715</z-m>
	</center>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<!--COURSE SET-->

<animation>
	<type>rotate</type>
	<object-name>course-set-knob</object-name>
	<property>/instrumentation/cdi/course-set</property>
	<center>
		<x-m>0.0</x-m>
		<y-m>-0.03787</y-m>
		<z-m>-0.03725</z-m>
	</center>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<animation>
	<type>pick</type>
	<object-name>dec</object-name>
	<visible>false</visible>
	<action>
		<button>0</button>
		<repeatable>true</repeatable>
		<interval-sec>0.05</interval-sec>
		<binding>
			<command>property-adjust</command>
			<property>/instrumentation/cdi/course-set</property>
			<step>-1</step>
			<min>0</min>
			<max>360</max>
			<wrap>1</wrap>
		</binding>
	</action>
</animation>   

<animation>
	<type>pick</type>
	<object-name>inc</object-name>
	<visible>false</visible>
	<action>
		<button>0</button>
		<repeatable>true</repeatable>
		<interval-sec>0.05</interval-sec>
		<binding>
			<command>property-adjust</command>
			<property>/instrumentation/cdi/course-set</property>
			<step>1</step>
			<min>0</min>
			<max>360</max>
			<wrap>1</wrap>
		</binding>
	</action>
</animation>   

<!--COURSE NUMERIC DISPLAY-->

<animation>
	<type>textranslate</type>
	<object-name>crs1</object-name>
	<property>/instrumentation/cdi/course-set</property>
	<factor>0.001</factor>
	<step>100</step>
	<axis>
		<y>-1</y>
	</axis>
</animation>

<animation>
	<type>textranslate</type>
	<object-name>crs2</object-name>
	<property>/instrumentation/cdi/course-set</property>
	<factor>0.01</factor>
	<step>10</step>
	<axis>
		<y>-1</y>
	</axis>
</animation>

<animation>
	<type>textranslate</type>
	<object-name>crs3</object-name>
	<property>/instrumentation/cdi/course-set</property>
	<factor>0.1</factor>
	<step>1</step>
	<axis>
		<y>-1</y>
	</axis>
</animation>

<!--MARKER BEACON-->

<animation>
	<type>select</type>
	<object-name>marker-off</object-name>
	<condition>
		<and>
			<not>
				<property>instrumentation/marker-beacon/inner</property>
			</not>
			<not>
				<property>instrumentation/marker-beacon/middle</property>
			</not>
			<not>
				<property>instrumentation/marker-beacon/outer</property>
			</not>
		</and>
	</condition>
</animation>    

<animation>
	<type>select</type>
	<object-name>marker-on</object-name>
	<condition>
		<or>
			<property>instrumentation/marker-beacon/inner</property>
			<property>instrumentation/marker-beacon/middle</property>
			<property>instrumentation/marker-beacon/outer</property>
		</or>
	</condition>
</animation>    

<!--LoD-->

<animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

</PropertyList>
