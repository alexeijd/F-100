<?xml version="1.0"?>

<!--F-100D RDMI (radio direction magnetic indicator)-->

<PropertyList>

<path>Models/RDMI.ac</path>
<texture-path>Textures</texture-path>

<!--LIGHTING-->

<animation>
	<type>material</type>
	<object-name>indicator</object-name>
	<emission>
		<red>0.75</red>
		<green>0.25</green>
		<blue>0.25</blue>
		<factor-prop>/controls/lighting/panel-norm</factor-prop>
	</emission> 
</animation> 

<!--METAL EFFECTS-->

<animation>
	<type>shader</type>
	<shader>chrome</shader>
	<texture>metal-shader.png</texture>
		<object-name>screws</object-name>
</animation>

<!--ROTATIONS-->

<animation>
	<type>rotate</type>
	<object-name>face</object-name>
	<property>/orientation/heading-magnetic-deg</property>
	<axis>
		<x>1</x>
	</axis>
</animation>

	<!--VOR needle-->

<animation>
	<type>rotate</type>
	<object-name>VOR-Needle</object-name>
	<property>/orientation/heading-magnetic-deg</property>
	<axis>
		<x>1</x>
	</axis>
 </animation>

<animation>
	<type>rotate</type>
	<object-name>VOR-Needle</object-name>
	<property>/instrumentation/nav[1]/radials/reciprocal-radial-deg</property>
	<axis>
		<x>-1</x>
	</axis>
</animation>

	<!--TACAN needle-->

<animation>
	<type>rotate</type>
	<object-name>TACAN-Needle</object-name>
	<property>/orientation/heading-deg</property>
	<axis>
		<x>1</x>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>TACAN-Needle</object-name>
	<property>/instrumentation/tacan/indicated-bearing-true-deg</property>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<!--LoD-->

<animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

</PropertyList>


