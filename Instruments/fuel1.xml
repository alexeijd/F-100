<?xml version="1.0"?>

<!--F-100D internal fuel quantity indicator-->

<PropertyList>

<path>Models/fuel1.ac</path>
<texture-path>Textures</texture-path>

<animation>
        <type>shader</type>
        <shader>chrome</shader>
        <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
        <object-name>glass</object-name>
</animation>


<!--LIGHTING-->

<animation>
	<type>material</type>
	<object-name>indicator</object-name>
	<emission>
		<red>0.75</red>
		<green>0.25</green>
		<blue>0.25</blue>
		<factor-prop>controls/lighting/panel-norm</factor-prop>
	</emission> 
</animation> 

<!--ROTATION-->

<animation>
	<type>rotate</type>
	<object-name>needle</object-name>
	<property>/fdm/jsbsim/propulsion/tank[0]/contents-lbs</property>
	<interpolation>
		<entry><ind>0</ind><dep>0</dep></entry>
		<entry><ind>1000</ind><dep>42</dep></entry>
		<entry><ind>2000</ind><dep>82</dep></entry>
		<entry><ind>3000</ind><dep>122</dep></entry>
		<entry><ind>4000</ind><dep>162</dep></entry>
		<entry><ind>5000</ind><dep>202</dep></entry>
		<entry><ind>6000</ind><dep>242</dep></entry>
		<entry><ind>7000</ind><dep>282</dep></entry>
		<entry><ind>8000</ind><dep>322</dep></entry>
	</interpolation>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<!--PRESS-TO-TEST OFF-->

<animation>
	<type>select</type>
	<object-name>needle</object-name>
	<condition>
		<not-equals>
			<property>/consumables/fuel/panel-ptt</property>
			<value>1</value>
		</not-equals>
	</condition>
</animation>

<!--PRESS-TO-TEST ON-->

<animation>
	<type>select</type>
	<object-name>ptt-needle</object-name>
	<condition>
		<equals>
			<property>/consumables/fuel/panel-ptt</property>
			<value>1</value>
		</equals>
	</condition>
</animation>

<!--LoD-->

<animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

</PropertyList>
