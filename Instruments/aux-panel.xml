<?xml version="1.0"?>

<!--F-100D upper-left aux panel-->

<PropertyList>

<path>Models/aux-panel.ac</path>
<texture-path>Textures</texture-path>

<!--LIGHTING-->

<animation>
	<type>material</type>
	<object-name>indicator</object-name>
	<emission>
		<red>0.75</red>
		<green>0.25</green>
		<blue>0.25</blue>
		<factor-prop>controls/lighting/panel-norm</factor-prop>
	</emission> 
</animation> 

<!--METAL EFFECTS-->

<animation>
	<type>shader</type>
	<shader>chrome</shader>
	<texture>metal-shader.png</texture>
		<object-name>base</object-name>
</animation>

<!--PRESS-TO-TEST-->

<animation>
	<type>pick</type>
	<object-name>button</object-name>
	<visible>true</visible>
	<action>
		<button>0</button>
		<binding>
			<command>property-assign</command>
			<property>/consumables/fuel/aux-panel-ptt</property>
			<value>1</value>
		</binding>
		<mod-up>
			<binding>
				<command>property-assign</command>
				<property>/consumables/fuel/aux-panel-ptt</property>
				<value>0</value> 
			</binding>
		</mod-up>
	</action>
</animation>

<!--PRESS-TO-TEST OFF-->

<animation>
	<type>select</type>
	<object-name>left-needle</object-name>
	<object-name>right-needle</object-name>
	<condition>
		<not-equals>
			<property>/consumables/fuel/aux-panel-ptt</property>
			<value>1</value>
		</not-equals>
	</condition>
</animation>

<!--PRESS-TO-TEST ON-->

<animation>
	<type>select</type>
	<object-name>ptt-needle</object-name>
	<condition>
		<equals>
			<property>/consumables/fuel/aux-panel-ptt</property>
			<value>1</value>
		</equals>
	</condition>
</animation>

<!--ROTATIONS-->

<animation>
	<type>rotate</type>
	<object-name>left-needle</object-name>
	<property>/fdm/jsbsim/propulsion/tank[1]/contents-lbs</property>
	<interpolation>
		<entry><ind>0</ind><dep>0</dep></entry>
		<entry><ind>1000</ind><dep>100</dep></entry>
		<entry><ind>2000</ind><dep>200</dep></entry>
		<entry><ind>3000</ind><dep>300</dep></entry>
	</interpolation>
    <center>
      <x-m>0.0</x-m>
      <y-m>-0.271132</y-m>
      <z-m>0.794382</z-m>
    </center>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>right-needle</object-name>
	<property>/fdm/jsbsim/propulsion/tank[2]/contents-lbs</property>
	<interpolation>
		<entry><ind>0</ind><dep>0</dep></entry>
		<entry><ind>1000</ind><dep>100</dep></entry>
		<entry><ind>2000</ind><dep>200</dep></entry>
		<entry><ind>3000</ind><dep>300</dep></entry>
	</interpolation>
    <center>
      <x-m>0.0</x-m>
      <y-m>-0.175512</y-m>
      <z-m>0.794382</z-m>
    </center>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<!--DRAG CHUTE DEPLOY-->

<animation>
	<type>translate</type>
	<object-name>drag-chute-handle</object-name>
	<property>/fdm/jsbsim/systems/chute/deploy</property>
	<interpolation>
		<entry><ind>0</ind><dep>0</dep></entry>
		<entry><ind>1</ind><dep>.02</dep></entry>
	</interpolation>
	<axis>
		<x>1</x>
	</axis>
</animation>

</PropertyList>