<?xml version="1.1"?>

<!--F-100D A-4 gunsight-->

<PropertyList>

<path>Models/gunsight.ac</path>
<texture-path>Textures</texture-path>

<!--LIGHTING-->

<animation>
	<type>material</type>
	<object-name>face</object-name>
	<emission>
		<red>0.75</red>
		<green>0.25</green>
		<blue>0.25</blue>
		<factor-prop>controls/lighting/panel-norm</factor-prop>
	</emission> 
</animation> 

<!--RETICLE ILLUMINATION CONTROL-->

<animation>
	<type>material</type>
	<object-name>reticle</object-name>
	<emission>
		<red>.7</red>
		<green>1.0</green>
		<blue>0</blue>
		<factor-prop>/controls/lighting/reticle</factor-prop>
	</emission>
</animation>

<animation>
	<type>rotate</type>
	<object-name>knob</object-name>
	<property>/controls/lighting/reticle</property>
	<factor>180</factor>
	<axis>
		<x1-m>-4.221927</x1-m>
		<y1-m>0.220050</y1-m>
		<z1-m>0.751138</z1-m>
		<x2-m>-4.226593</x2-m>
		<y2-m>0.220050</y2-m>
		<z2-m>0.749440</z2-m>
	</axis>
</animation> 

<animation>
	<type>pick</type>
	<object-name>dim</object-name>
	<visible>false</visible>
	<action>
		<button>0</button>
		<repeatable>true</repeatable>
		<interval-sec>0.1</interval-sec>
		<binding>
			<command>property-adjust</command>
			<property>/controls/lighting/reticle</property>
			<step>-.2</step>
			<min>0</min>
			<max>1</max>
			<wrap>0</wrap>
		</binding>
	</action>
</animation>   

<animation>
	<type>pick</type>
	<object-name>bright</object-name>
	<visible>false</visible>
	<action>
		<button>0</button>
		<repeatable>true</repeatable>
		<interval-sec>0.1</interval-sec>
		<binding>
			<command>property-adjust</command>
			<property>/controls/lighting/reticle</property>
			<step>.2</step>
			<min>0</min>
			<max>1</max>
			<wrap>0</wrap>
		</binding>
	</action>
</animation>   

<!--RETICLE-->

<animation>
	<type>select</type>
	<object-name>reticle</object-name>
	<condition>   
		<and>
			<greater-than>
				<property>controls/lighting/reticle</property>  
				<value>0</value>				 
			</greater-than>
			<greater-than-equals>
				<property>orientation/side-slip-deg</property>  
				<value>-2</value>				 
			</greater-than-equals>
			<less-than-equals>
				<property>orientation/side-slip-deg</property>  
				<value>2</value>				 
			</less-than-equals>
			<greater-than-equals>
				<property>/instrumentation/accelerometer/G</property>  
				<value>-1</value>				 
			</greater-than-equals>
			<less-than-equals>
				<property>/instrumentation/accelerometer/G</property>  
				<value>4</value>				 
			</less-than-equals>
		</and>
	</condition>
</animation>

<animation> 
	<type>translate</type>
	<object-name>reticle</object-name>
	<property>orientation/side-slip-deg</property>
	<interpolation>
		<entry><ind>-2</ind><dep>0.092</dep></entry>
		<entry><ind>0</ind><dep>0</dep></entry>
		<entry><ind>2</ind><dep>-0.092</dep></entry>
	</interpolation>
	<axis> 
		<y>1</y>
	</axis>
</animation>

<animation> 
	<type>translate</type>
	<object-name>reticle</object-name>
	<property>/instrumentation/accelerometer/G</property>
	<interpolation>
		<entry><ind>0</ind><dep>0.036</dep></entry>
		<entry><ind>1</ind><dep>0</dep></entry>
		<entry><ind>4</ind><dep>-0.108</dep></entry>
	</interpolation>
	<axis> 
		<z>1</z>
	</axis>
</animation>

<!--LoD-->

<animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>100</max-m>
</animation>

</PropertyList>
