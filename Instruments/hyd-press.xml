<?xml version="1.0"?>

<!--F-100D hydraulic pressure indicator-->

<PropertyList>

<path>Models/hyd-press.ac</path>
<texture-path>Textures</texture-path>

<!--LIGHTING-->

<animation>
	<type>material</type>
	<object-name>indicator</object-name>
	<emission>
		<red>0.75</red>
		<green>0.25</green>
		<blue>0.25</blue>
		<factor-prop>controls/lighting/panel-norm</factor-prop>
	</emission> 
</animation> 

<!--ROTATIONS-->

<animation>
	<type>rotate</type>
	<object-name>needle</object-name>
	<property>/engines/engine[0]/running</property>
	<interpolation>
		<entry><ind>0</ind><dep>0</dep></entry>
		<entry><ind>1</ind><dep>240</dep></entry>
	</interpolation>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>needle</object-name>
	<property>/surface-positions/flap-pos-norm</property>
	<interpolation>
		<entry><ind>0</ind><dep>0</dep></entry>
		<entry><ind>.001</ind><dep>-40</dep></entry>
		<entry><ind>.489</ind><dep>-40</dep></entry>
		<entry><ind>.49</ind><dep>0</dep></entry>
		<entry><ind>.501</ind><dep>-40</dep></entry>
		<entry><ind>.999</ind><dep>-40</dep></entry>
		<entry><ind>1</ind><dep>0</dep></entry>
	</interpolation>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>needle</object-name>
	<property>/gear/gear[0]/position-norm</property>
	<interpolation>
		<entry><ind>0</ind><dep>0</dep></entry>
		<entry><ind>.001</ind><dep>-40</dep></entry>
		<entry><ind>.999</ind><dep>-40</dep></entry>
		<entry><ind>1</ind><dep>0</dep></entry>
	</interpolation>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>needle</object-name>
	<property>/surface-positions/speedbrake-pos-norm</property>
	<interpolation>
		<entry><ind>0</ind><dep>0</dep></entry>
		<entry><ind>.001</ind><dep>-20</dep></entry>
		<entry><ind>.999</ind><dep>-20</dep></entry>
		<entry><ind>1</ind><dep>0</dep></entry>
	</interpolation>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>needle</object-name>
	<property>/controls/gear/brake-left</property>
	<interpolation>
		<entry><ind>0</ind><dep>0</dep></entry>
		<entry><ind>.001</ind><dep>-10</dep></entry>
		<entry><ind>1</ind><dep>-10</dep></entry>
	</interpolation>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>needle</object-name>
	<property>/controls/gear/brake-right</property>
	<interpolation>
		<entry><ind>0</ind><dep>0</dep></entry>
		<entry><ind>.001</ind><dep>-10</dep></entry>
		<entry><ind>1</ind><dep>-10</dep></entry>
	</interpolation>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<!--LoD-->

<animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

</PropertyList>