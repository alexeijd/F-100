<?xml version="1.0" encoding="UTF-8"?>

<!--F-100D Standby Attitude/Turn Indicator-->

<PropertyList>

<path>Models/ai-stby.ac</path>
<texture-path>Textures</texture-path>

<!--LIGHTING-->

<animation>
	<type>material</type>
	<object-name>indicator</object-name>
	<emission>
		<red>0.75</red>
		<green>0.25</green>
		<blue>0.25</blue>
		<factor-prop>/controls/lighting/panel-norm</factor-prop>
	</emission> 
</animation> 

<!--METAL EFFECTS-->

<animation>
	<type>shader</type>
	<shader>chrome</shader>
	<texture>metal-shader.png</texture>
		<object-name>screws</object-name>
</animation>

<!--ROTATIONS-->

<animation>
	<type>rotate</type>
	<object-name>attitude-sphere</object-name>
	<property>orientation/roll-deg</property>
	<axis>
		<x> 1 </x>
	</axis>
</animation>  

<animation>
	<type>rotate</type>
	<object-name>attitude-sphere</object-name>
	<property>/orientation/pitch-deg</property>
	<axis>
		<y>1</y>
	</axis>
</animation>  

<animation>
	<type>rotate</type>
	<object-name>attitude-sphere</object-name>
	<property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
	<axis>
		<y>1</y>
	</axis>
</animation>  

<animation>
	<type>rotate</type>
	<object-name>bank-index</object-name>
	<property>/orientation/roll-deg</property>
	<min-deg>-90</min-deg>
	<max-deg>90</max-deg>
	<axis>
		<x>1</x>
	</axis>
</animation>

<!--HORIZON OFFSET-->

<animation> 
	<type>rotate</type>
	<object-name>knob</object-name>
	<property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
	<factor>5</factor>
    <center>
      <x-m>0.0 </x-m>
      <y-m>0.032920</y-m>
      <z-m>-0.034217</z-m>
    </center>
	<axis> 
		<x>-1</x>
	</axis>
</animation>

<!--LoD-->

<animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

</PropertyList>
