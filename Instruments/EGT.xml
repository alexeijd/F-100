<?xml version="1.0"?>

<!--F-100D Exhaust Gas Temperature Indicator-->

<PropertyList>

<path>Models/EGT.ac</path>
<texture-path>Textures</texture-path>

<!--LIGHTING-->

<animation>
	<type>material</type>
	<object-name>indicator</object-name>
	<emission>
		<red>0.75</red>
		<green>0.25</green>
		<blue>0.25</blue>
		<factor-prop>/controls/lighting/panel-norm</factor-prop>
	</emission> 
</animation> 

<!--ROTATION-->

<animation>
	<type>rotate</type>
	<object-name>needle</object-name>
	<property>/engines/engine[0]/egt-degc</property>
	<interpolation>
		<entry><ind>0</ind><dep>0</dep></entry>
		<entry><ind>1000</ind><dep>250</dep></entry>
	</interpolation>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<!--LoD-->

<animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

</PropertyList>