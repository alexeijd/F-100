<?xml version="1.0"?>

<!--F-100D VSI (vertical speed indicator)-->

<PropertyList>

<path>Models/vvi.ac</path>
<texture-path>Textures</texture-path>

<!--LIGHTING-->

<animation>
	<type>material</type>
	<object-name>indicator</object-name>
	<emission>
		<red>0.75</red>
		<green>0.25</green>
		<blue>0.25</blue>
		<factor-prop>/controls/lighting/panel-norm</factor-prop>
	</emission> 
</animation> 

<!--METAL EFFECTS-->

<animation>
	<type>shader</type>
	<shader>chrome</shader>
	<texture>metal-shader.png</texture>
		<object-name>screws</object-name>
</animation>

<!--ROTATION-->

<animation>
	<type>rotate</type>
	<object-name>needle</object-name>
	<property>/velocities/vertical-speed-fpm</property>
	<interpolation>
		<entry><ind>6000</ind><dep>170</dep></entry>
		<entry><ind>4000</ind><dep>135</dep></entry>
		<entry><ind>2000</ind><dep>80</dep></entry>
		<entry><ind>1000</ind><dep>45</dep></entry>
		<entry><ind>0</ind><dep>0</dep></entry>
		<entry><ind>-1000</ind><dep>-45</dep></entry>
		<entry><ind>-2000</ind><dep>-80</dep></entry>
		<entry><ind>-4000</ind><dep>-135</dep></entry>
		<entry><ind>-6000</ind><dep>-170</dep></entry>
	</interpolation>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<!--LoD-->

<animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

</PropertyList>
