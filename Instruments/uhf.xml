<?xml version="1.0" encoding="UTF-8"?>

<!--***F-100D UHF repeater***-->

<PropertyList>

<path>Models/uhf.ac</path>
<texture-path>Textures</texture-path>

<animation>
        <type>shader</type>
        <shader>chrome</shader>
        <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
        <object-name>glass</object-name>
</animation>


<!--LIGHTING-->

<animation>
	<type>material</type>
	<object-name>indicator</object-name>
	<emission>
		<red>0.75</red>
		<green>0.25</green>
		<blue>0.25</blue>
		<factor-prop>/controls/lighting/panel-norm</factor-prop>
	</emission> 
</animation> 

<!--METAL EFFECTS-->

<animation>
	<type>shader</type>
	<shader>chrome</shader>
	<texture>metal-shader.png</texture>
		<object-name>screws</object-name>
</animation>

<!--DIGITS-->

<animation>
	<type>textranslate</type>
	<object-name>num1</object-name>
	<property>instrumentation/comm[0]/frequencies/selected-mhz</property>
	<factor>0.001</factor>
	<step>100</step>
	<axis>
		<y>-1</y>
	</axis>
</animation>

<animation>
	<type>textranslate</type>
	<object-name>num2</object-name>
	<property>instrumentation/comm[0]/frequencies/selected-mhz</property>
	<factor>0.01</factor>
	<step>10</step>
	<axis>
		<y>-1</y>
	</axis>
</animation>

<animation>
	<type>textranslate</type>
	<object-name>num3</object-name>
	<property>instrumentation/comm[0]/frequencies/selected-mhz</property>
	<factor>0.1</factor>
	<step>1</step>
	<axis>
		<y>-1</y>
	</axis>
</animation>

<animation>
	<type>textranslate</type>
	<object-name>num4</object-name>
	<property>instrumentation/comm[0]/frequencies/selected-mhz</property>
	<factor>1</factor>
	<step>.1</step>
	<axis>
		<y>-1</y>
	</axis>
</animation>

<!--LoD-->

<animation> 
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

</PropertyList>

